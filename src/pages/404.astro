---
import Wrapper from "../components/Base/Wrapper.astro";
import { PAGES } from "../config";
import BaseLayout from "../layouts/BaseLayout.astro";
import TextFlow from "../components/Base/TextFlow.astro";


---

<BaseLayout props
    lang="en"
    title="Page Not Found"
    description="This page cannot be found"
>

    <Wrapper width="max" padding="both" class="">

        <TextFlow class="self-center">
            <h1 class="text-3xl mb-4">Error: Page not found</h1>
    
            <p class="mb-4">We're sorry, the page you are looking for could not be found. Here is a list of all our pages:</p>

            <ul>
                { PAGES.map( page => (
                    <li>
                        <a href={page.path} class="hover:underline">{page.title}</a>
                    </li>
                ))}
            </ul>
    
        </TextFlow>

    </Wrapper>

</BaseLayout>
