---
import SkipToContent from '../components/SkipToContent.astro';
import '../css/config.css'
import Footer from '../components/Footer.astro';
import MainContent from '../components/MainContent.astro';
import Meta from '../components/Meta.astro';
import type { Layout } from './types';
import Header from '../components/Header.astro';
import CallToActionBanner from '../components/CallToActionBanner.astro';
import PageTop from '../components/PageTop.astro';
import BackToTop from '../components/BackToTop.astro';


interface Props extends Layout { }

const {
    title,
    description,
	lang = 'en',
	class : className
} = Astro.props

const isRegisterPage = Astro.url.pathname.includes('/register')

---

<html lang={lang} class="">

	<Meta title={title} description={description} />

	<body class:list={['bg-[var(--body-bg-color)] font-base text-[var(--body-text-color)]', className]}>

		<SkipToContent />

		<PageTop />

		<Header variant='sticky' props />
		
        <MainContent>

            <slot />

        </MainContent>

		{ !isRegisterPage &&
			<CallToActionBanner />
		}

        <Footer />

		<BackToTop />

		<slot name="pageEnd" />
		
	</body>
</html>


