---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'li'> {

    /** Link href of Nav Link */
    href : string,

    /** Material icon string */
    icon? : string,

    class? : string,

    /**
     * @prop href (string)
     * @prop icon (string)
     * @prop slot
     */
    props? : true
}

const {
    href,
    class : className,
} = Astro.props

let { pathname } = Astro.url

let isActive: boolean = pathname === '/'
    ? pathname === href
    : pathname.includes(href) && href !== '/'

---

<li>
    <a
        href={href} 
        class:list={[
            className,
            'flex items-center gap-3 border-b-2 hover:text-secondary-500',
            `${isActive ? 'border-primary-400' : 'border-transparent'}`
        ]}
    >

        <slot />

    </a>

</li>



