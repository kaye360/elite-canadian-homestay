---
import { LOGO_NAME} from '../config';

interface Props {

    class? : string,

    /**
     * none
     */
    props? : true
}

const { 
    class: className,
} = Astro.props
---

<a href="/" class="font-theme text-md sm:text-md md:text-lg min-w-max max-w-min hover:text-secondary-500">
    <div class:list={['relative after:absolute after:bottom-0 after:left-6 after:right-6 after:h-[1px] after:bg-primary-600 min-w-max hover:after:bg-secondary-500', className]}>
    
        {LOGO_NAME}

    </div>
</a>    



<style>

div {
    display : flex;
    align-items: center;
    gap : 0.5rem;
    stroke: var(--nav-bar-logo-color);
}

</style>